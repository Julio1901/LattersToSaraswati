<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CreateAnAccountFragment" >

    <EditText
        android:id="@+id/edit_text_create_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:ems="10"
        android:gravity="center"
        android:hint="User Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_text_create_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Your Best Email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_create_user_name" />

    <EditText
        android:id="@+id/edit_text_create_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_create_email" />

    <Button
        android:id="@+id/btn_create_user"
        android:layout_width="119dp"
        android:layout_height="47dp"
        android:layout_marginTop="88dp"
        android:backgroundTint="@color/blue_calm"
        android:text="Create"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_create_password"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView_error_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This field is mandatory."
        android:textColor="@color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/edit_text_create_user_name"
        app:layout_constraintEnd_toEndOf="@+id/edit_text_create_user_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edit_text_create_user_name" />

    <TextView
        android:id="@+id/textView_error_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This field is mandatory"
        android:textColor="@color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/edit_text_create_email"
        app:layout_constraintEnd_toEndOf="@+id/edit_text_create_email"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edit_text_create_email" />

    <TextView
        android:id="@+id/textView_error_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This field is mandatory"
        android:textColor="@color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/edit_text_create_password"
        app:layout_constraintEnd_toEndOf="@+id/edit_text_create_password"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edit_text_create_password" />
</androidx.constraintlayout.widget.ConstraintLayout>